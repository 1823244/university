program lab_2;var  Ax, Ay, Bx, By, Cx, Cy: real;   AB, BC, AC: real;   Epsilon: real; begin  writeln('Задание:');  writeln('Даны координаты вершин треугольника: (Ax, Ay), (Bx, By), (Cx, Cy).':69);  writeln('Определить, является ли данный треугольник':45);  writeln('равносторонним, равнобедренным или разносторонним':52);  writeln;  writeln('--------------------------------------------------------------------------------');  writeln;  writeln('Введите координаты вершин треугольника: ');  writeln;    writeln('A:': 5);      write('x = ':10);      readln(Ax);      write('y = ': 10);      readln(Ay);    writeln('B:': 5);      write('x = ':10);      readln(Bx);      write('y = ': 10);      readln(By);    writeln('C:': 5);      write('x = ':10);      readln(Cx);      write('y = ': 10);      readln(Cy);  writeln;  Epsilon := 0.001;  AB := sqr(Bx - Ax) + sqr(By - Ay);  BC := sqr(Cx - Bx) + sqr(Cy - By);  AC := sqr(Cx - Ax) + sqr(Cy - Ay);  if((abs(AB - BC) < Epsilon) and (abs(BC - AC) < Epsilon)) then    writeln('Этот треугольник равносторонний')  else if((abs(AB - BC) < Epsilon) or (abs(BC - AC) < Epsilon) or (abs(AB - AC) <Epsilon)) then    writeln('Этот треугольник равнобедренный')  else    writeln('Этот треугольник разносторонний');  writeln;  writeln('--------------------------------------------------------------------------------');  writeln;  writeln('Нажмите [Enter] для завершения работы программы!');  readln;end.