<Window x:Class="Program.InstancesList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Экземпляры" Height="300" Width="400">
    <Grid>
        <DataGrid x:Name="instanceGrid"
                  SelectionMode="Single"
                  AutoGeneratingColumn="instanceGrid_AutoGeneratingColumn"
                  MouseDoubleClick="instanceGrid_MouseDoubleClick"/>
        <Button x:Name="AddInstance"
                Content="Добавить экземпляр"
                Style="{StaticResource ResourceKey=Add}"
                Click="AddInstance_Click" />
    </Grid>
</Window>
